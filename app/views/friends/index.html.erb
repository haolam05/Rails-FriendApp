<% if user_signed_in? %>
  <table class="table table-striped table-hover table-bordered aligned-center">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="text-centered">
      <% @friends.each do |friend| %>
        <% if friend.user == current_user #friend.user comes models/friend.rb %>
          <tr>
            <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class: 'btn btn-primary' %>
<% else %>
  <h1>Hello World!</h1>
  This is my first Rails Webpage
<% end %> 