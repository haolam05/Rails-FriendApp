<div class="jumbotron jumbotron-fluid" style="background: lightcyan; padding: 20px 20px 20px 20px">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>

  <p class="lead">
    <%= @friend.email %> | 
    <%= @friend.phone %> | 
    <%= @friend.twitter %>
  </p>

  <br>
  <%= link_to "Edit", edit_friend_path(@friend), class: 'btn btn-primary' %> 
  <%= link_to "Back", friends_path, class: 'btn btn-primary' %>
  <%= button_to "Destroy this friend", @friend, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
</div>
